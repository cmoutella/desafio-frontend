{
	"name": "qcx-challenge",
	"version": "1.0.0",
	"description": "Desafio Tecnico",
	"private": true,
	"scripts": {
		"prejs:dev": "eslint --fix src/js",
		"js:dev": "webpack --mode development",
		"js:prod": "webpack --mode production",
		"css:dev": "node-sass --source-map-embed --output-style expanded --output assets/css src/css",
		"css:prod": "node-sass --output-style compressed --output assets/css src/css",
		"postcss:dev": "postcss assets/css --replace --use autoprefixer --env development",
		"postcss:prod": "postcss assets/css --replace --use autoprefixer --use cssnano --env production --no-map",
		"server": "browser-sync start --server . --files assets",
		"start": "npm-run-all --parallel server watch",
		"build": "npm-run-all --parallel *:prod",
		"watch": "npm-watch"
	},
	"watch": {
		"css:dev": {
			"patterns": "src/css/**",
			"extensions": "sass",
			"quiet": true
		},
		"js:dev": {
			"patterns": "src/js/**",
			"extensions": "js",
			"quiet": true
		}
	},
	"browserslist": {
		"production": [
			"last 2 major versions",
			"> 1% in US",
			"> 1% in BR",
			"Firefox ESR",
			"not dead"
		],
		"development": [
			"last 1 major version",
			"Firefox ESR",
			"not dead"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "avoid"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"commonjs": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:prettier/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 2017,
			"sourceType": "module"
		},
		"rules": {
			"no-console": "warn",
			"no-unused-vars": "warn",
			"comma-dangle": [
				"error",
				"only-multiline"
			],
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"never"
			],
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 2,
					"maxEOF": 1,
					"maxBOF": 1
				}
			]
		}
	},
	"author": "Carolina Moutella < ola@carolinamoutella.com >",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"autoprefixer": "^9.4.2",
		"babel-loader": "^8.0.4",
		"browser-sync": "^2.26.3",
		"cssnano": "^4.1.7",
		"eslint": "^5.9.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-plugin-prettier": "^3.0.0",
		"node-sass": "^4.10.0",
		"npm-run-all": "^4.1.5",
		"npm-watch": "^0.5.0",
		"postcss": "^7.0.6",
		"postcss-cli": "^6.0.1",
		"prettier": "1.15.3",
		"webpack": "^4.27.0",
		"webpack-cli": "^3.1.2"
	}
}
